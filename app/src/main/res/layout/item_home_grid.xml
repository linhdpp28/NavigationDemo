<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemHomeMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/background_corner_round_white"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iconHomeMenu"
        android:layout_width="@dimen/icon_home_menu"
        android:layout_height="@dimen/icon_home_menu"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/ic_shopping_basket" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleHomeMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="16sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeTextType="uniform"
        tools:text="TextView" />
</LinearLayout>